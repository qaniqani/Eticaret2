@model AdminProject.Infrastructure.Models.Bank

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Add";
}

<div class="content-wrap">
    <div class="row">
        <div class="col-sm-12">
            <div class="nest" id="basicClose">
                <div class="title-alt">
                    <h6>Bank</h6>
                    <div class="titleToggle">
                        <a class="nav-toggle-alt" href="#basic">
                            <span class="entypo-up-open"></span>
                        </a>
                    </div>
                </div>
                <div class="body-nest" id="basic">
                    <div class="form_center">
                        <form role="form" action="/Admin/Bank/Add" method="post">
                            <div class="form-group">
                                <label for="Name">Name</label>
                                @Html.TextBoxFor(model => model.Name, new { @class = "form-control validate[required,minSize[1]"})
                            </div>
                            <div class="form-group">
                                <label for="AccountNo">Account No</label>
                                @Html.TextBoxFor(model => model.AccountNo, new { @class = "form-control validate[required,minSize[1]" })
                            </div>
                            <div class="form-group">
                                <label for="Branch">Branch</label>
                                @Html.TextBoxFor(model => model.Branch, new { @class = "form-control validate[required,minSize[1]" })
                            </div>
                            <div class="form-group">
                                <label for="BranchCode">Branch Code</label>
                                @Html.TextBoxFor(model => model.BranchCode, new { @class = "form-control validate[required,minSize[1]" })
                            </div>
                            <div class="form-group">
                                <label for="ExchangeType">Exchange Type</label>
                                @Html.TextBoxFor(model => model.ExchangeType, new { @class = "form-control validate[required,minSize[1]" })
                            </div>
                            <div class="form-group">
                                <label for="Iban">Iban</label>
                                @Html.TextBoxFor(model => model.Iban, new { @class = "form-control validate[required,minSize[1]" })
                            </div>
                            <div class="form-group">
                                <label for="SequenceNr">Sequence Number</label>
                                @Html.TextBoxFor(model => model.SequenceNr, new { @class = "form-control validate[required,minSize[1]" })
                            </div>
                            <div class="form-group">
                                <label for="Status">Status</label>
                                @Html.DropDownListFor(model => model.Status, ViewBag.StatusList as SelectList, new { @class = "form-control" })
                            </div>
                            <button class="btn btn-info" type="submit">Submit</button>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>