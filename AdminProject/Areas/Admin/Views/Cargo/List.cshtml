@model IEnumerable<AdminProject.Infrastructure.Models.Cargo>

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "List";
}

<div class="content-wrap">
    <div class="row">
        <div class="col-sm-12">
            <div class="nest" id="FootableClose">
                <div class="title-alt">
                    <h6>
                        Cargos
                    </h6>
                    <div class="titleToggle">
                        <a class="nav-toggle-alt" href="#Footable">
                            <span class="entypo-up-open"></span>
                        </a>
                    </div>
                </div>
                <div class="body-nest" id="Footable">
                    <div class="row" style="margin-bottom:10px;">
                        <div class="col-sm-2 pull-right">
                            <input class="form-control" id="filter" placeholder="Search..." type="text">
                        </div>
                    </div>
                    <table class="table-striped footable-res footable metro-blue" data-page-size="10" data-filter="#filter" data-filter-text-only="true">
                        <thead>
                        <tr>
                            <th>
                                Name
                            </th>
                            <th>
                                Price
                            </th>
                            <th>
                                Default
                            </th>
                            <th>
                                Pay Door
                            </th>
                            <th>
                                Status
                            </th>
                            <th>
                                #
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                        @{
                            foreach (var cargo in Model)
                            {
                                <tr>
                                    <td>@cargo.Name</td>
                                    <td>@string.Format("{0:0.00}", cargo.Price)</td>
                                    <td>@cargo.DefaultCargo</td>
                                    <td>@cargo.IsPayDoor</td>
                                    <td>
                                        <span class="@(cargo.Status == AdminProject.Models.StatusTypes.Active ? "status-metro status-active" : "status-metro status-suspended")">
                                                @(cargo.Status == AdminProject.Models.StatusTypes.Active ? "Active" : "Deactive")
                                            </span>
                                    </td>
                                    <td style="width: 150px;">
                                        <a href="/Admin/Cargo/Edit/@cargo.Id">Edit</a>&nbsp;&nbsp;&nbsp;&nbsp;
                                        <a href="/Admin/Cargo/Delete/@cargo.Id" onclick="return confirm('Are you sure you want to continue?')">Delete</a>
                                    </td>
                                </tr>
                            }
                        }
                        </tbody>
                        <tfoot>
                        <tr>
                            <td colspan="5">
                                <div class="pagination pagination-centered"></div>
                            </td>
                        </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>