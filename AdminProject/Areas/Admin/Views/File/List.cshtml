@model IEnumerable<AdminProject.Infrastructure.Models.File>

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "List";
}

<div class="content-wrap">
    <div class="row">
        <div class="col-sm-12">
            <div class="nest" id="FootableClose">
                <div class="title-alt">
                    <h6>
                        Files
                    </h6>
                    <div class="titleToggle">
                        <a class="nav-toggle-alt" href="#Footable">
                            <span class="entypo-up-open"></span>
                        </a>
                    </div>
                </div>
                <div class="body-nest" id="Footable">
                    <div class="row" style="margin-bottom:10px;">
                        <div class="col-sm-2 pull-right">
                            <input class="form-control" id="filter" placeholder="Search..." type="text">
                        </div>
                    </div>
                    <table class="table-striped footable-res footable metro-blue" data-page-size="20" data-filter="#filter" data-filter-text-only="true">
                        <thead>
                            <tr>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Description
                                </th>
                                <th>
                                    Url
                                </th>
                                <th>
                                    #
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var file in Model)
                                {
                                    <tr>
                                        <td>@file.Name</td>
                                        <td>@(file.Description.Length > 160 ? file.Description.Substring(0, 160) + "..." : file.Description)</td>
                                        <td>@file.FileUrl</td>
                                        <td style="width:150px;">
                                            <a href="/Admin/File/Edit/@file.Id">Edit</a>&nbsp;&nbsp;&nbsp;&nbsp;
                                            <a href="/Admin/File/Delete/@file.Id" onclick="return confirm('Are you sure you want to continue?')">Delete</a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="5">
                                    <div class="pagination pagination-centered"></div>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>