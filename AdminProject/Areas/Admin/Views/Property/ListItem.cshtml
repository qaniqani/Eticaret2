@using AdminProject.Infrastructure.Models
@model List<PropertyItem>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title></title>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="/assets/css/style.css">
    <link rel="stylesheet" href="/assets/css/loader-style.css">
    <link rel="stylesheet" href="/assets/css/bootstrap.css">
    <link rel="stylesheet" href="/assets/css/extra-pages.css">

    <link rel="shortcut icon" href="/assets/ico/minus.png">
</head>
<body style="background: none repeat scroll 0 0 #fff !important;">
    <!--  PAPER WRAP -->
    <!-- CONTENT -->
    <div class="content-wrap" style="padding:0">
        <div class="row">
            <div class="col-sm-12">
                @{
                    if (TempData["Success"] != null)
                    {
                        <div class="body-nest" id="alert">
                            <div class="alert alert-success">
                                <button data-dismiss="alert" class="close" type="button">×</button>
                                <span class="entypo-thumbs-up"></span>
                                <strong>Success!</strong>&nbsp;&nbsp;@Html.Raw(TempData["Success"])
                            </div>
                        </div>
                    }

                    if (TempData["Warning"] != null)
                    {
                        <div class="body-nest" id="alert">
                            <div class="alert alert-warning">
                                <button data-dismiss="alert" class="close" type="button">×</button>
                                <span class="entypo-cancel-circled"></span>
                                <strong>Info!</strong>&nbsp;&nbsp;@Html.Raw(TempData["Warning"])
                            </div>
                        </div>
                    }
                }

                <div class="nest" id="FootableClose">
                    <div class="title-alt">
                        <h6>
                            Property Items
                        </h6>
                        <div class="titleToggle">
                            <a class="nav-toggle-alt" href="#Footable">
                                <span class="entypo-up-open"></span>
                            </a>
                        </div>
                    </div>
                    <div class="body-nest" id="Footable">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Sequence Nr</th>
                                    <th>Status</th>
                                    <th>#</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td>@item.SequenceNr</td>
                                        <td>
                                            <span class="@(item.Status == AdminProject.Models.StatusTypes.Active ? "status-metro status-active" : "status-metro status-suspended")">
                                                @(item.Status == AdminProject.Models.StatusTypes.Active ? "Active" : "Deactive")
                                            </span>
                                        </td>
                                        <td><a href="/Admin/Property/DeleteItem/@item.Id?propertyId=@item.PropertyId" onclick="return confirm('Are you sure you want to continue?')">Delete</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
