@model AdminProject.Models.UserDetailViewDto
@{
    ViewBag.Title = "Kullanıcı Bilgileri";
    ViewBag.Description = "Bilgilerinize ulaşabileceğiniz ve düzenleyebileceğiniz size özel alan.";
    ViewBag.Keyword = "payidar, kullanıcı, bilgiler, düzenleme, ekleme, silme";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    $(document).ready(function() {
        setAccountCountry();
    });
</script>

@Html.HiddenFor(model => model.Country, new { id = "Country" })
@Html.HiddenFor(model => model.City, new { id = "City" })
@Html.HiddenFor(model => model.Region, new { id = "Region" })

<div class="ct-contentWrapper">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                @{
                    Html.RenderPartial("UserMenu");
                }
            </div>

            <div class="col-md-8">
                <div class="col-md-12">
                    <h4 class="ct-headerBox ct-u-borderBottom ct-u-paddingBottom20 text-left ct-u-paddingTop10">Kullanıcı Bilgileriniz</h4>
                    <div class="ct-u-size16 ct-fw-700 ct-u-paddingBottom20 ct-u-paddingTop30">Son Giriş: @Model.LastLoginDate.ToString("dd.MM.yyyy HH:mm:ss") </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-6">
                            <label for="Name" class="control-label">Adınız*</label>
                            @Html.TextBoxFor(model => model.Name, new {@class = "form-control", required = "required", disabled = "disabled"})
                        </div>
                        <div class="col-sm-6">
                            <label for="Surname" class="control-label change-label">Soyadınız*</label>
                            @Html.TextBoxFor(model => model.Surname, new {@class = "form-control", required = "required", disabled = "disabled"})
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-6">
                            <label for="TcNr" class="control-label">T.C. Kimlik No*</label>
                            @Html.TextBoxFor(model => model.TcNr, new {@class = "form-control", required = "required", disabled = "disabled"})
                        </div>
                        <div class="col-sm-6">
                            <label for="Gender" class="control-label change-label">Cinsiyet*</label>
                            @Html.DropDownListFor(model => model.Gender, ViewBag.Gender as SelectList, new {@class = "form-control", disabled = "disabled"})
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="email" class="control-label">E-Mail Adresi*</label>
                    @Html.TextBoxFor(model => model.Email, new {@class = "form-control", required = "required", disabled = "disabled"})
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-6">
                            <label for="Phone" class="control-label">Telefon</label>
                            @Html.TextBoxFor(model => model.Phone, new {@class = "form-control", required = "required", disabled = "disabled"})
                        </div>
                        <div class="col-sm-6">
                            <label for="Gsm" class="control-label">Gsm</label>
                            @Html.TextBoxFor(model => model.Gsm, new {@class = "form-control", required = "required", disabled = "disabled"})
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-4">
                            <label for="AccountCountry" class="control-label">Ülke</label>
                            @Html.DropDownList("AccountCountry", ViewBag.CountryList as SelectList, new {@class = "form-control", id = "AccountCountry", disabled = "disabled"})
                        </div>
                        <div class="col-sm-4">
                            <label for="AccountCity" class="control-label">İl</label>
                            <select id="AccountCity" name="AccountCity" class="form-control" disabled></select>
                        </div>
                        <div class="col-sm-4">
                            <label for="AccountRegion" class="control-label">İlçe</label>
                            <select id="AccountRegion" name="AccountRegion" class="form-control" disabled></select>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="Address" class="control-label">Adres</label>
                    @Html.TextAreaFor(model => model.Address, new {@class = "form-control", required = "required", disabled = "disabled"})
                </div>
            </div>
        </div>
    </div>
</div>