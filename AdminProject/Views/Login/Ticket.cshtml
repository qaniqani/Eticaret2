@model AdminProject.Models.TicketDto

@{
    ViewBag.Title = "Havale Bildirim Formu";
    ViewBag.Description = "Siparişlerinizle ilgili ödemelerinizi bize bildirebilirsiniz...";
    ViewBag.Keyword = "havale bildirim formu, havale, eft formu, eft";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="ct-contentWrapper">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                @{
                    Html.RenderPartial("UserMenu");
                }
            </div>

            <div class="col-md-8">
                <form method="post" action="/user/ticket">
                    <div class="col-md-12">
                        <h4 class="ct-headerBox ct-u-borderBottom ct-u-paddingBottom20 text-left ct-u-paddingTop10">Havale Bildirim Formu</h4>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-6">
                                <label for="name" class="control-label">Adınız*</label>
                                <input type="text" id="name" value="@ViewBag.User.Name" class="form-control" disabled />
                            </div>
                            <div class="col-sm-6">
                                <label for="surname" class="control-label change-label">Soyadınız*</label>
                                <input type="text" id="surname" value="@ViewBag.User.Surname" class="form-control" disabled />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Password" class="control-label">Sipariş Numarası*</label>
                        @Html.TextBoxFor(model => model.OrderNr, new { @class = "form-control", required = "required"})
                    </div>
                    <div class="form-group">
                        <label for="Address" class="control-label">Mesajınız*</label>
                        @Html.TextAreaFor(model => model.Message, new { @class = "form-control", required = "required" })
                    </div>
                    <div class="form-group ct-u-paddingTop20">
                        <button type="submit" class="btn btn-success btn-default--submit">
                            Gönder <i class="fa fa-long-arrow-right fa-fw"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>