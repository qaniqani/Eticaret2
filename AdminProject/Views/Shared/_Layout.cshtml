<head lang="tr">
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    @*<meta name="author" content="NvisionSoft.net Abdulgani Demir">*@
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <title>@ViewBag.Title</title>
    <meta name="description" content="@ViewBag.Description" />
    <meta name="keywords" content="@ViewBag.Keyword" />

    @Styles.Render("~/main-css")

    <!-- JavaScripts files -->
    <script src="/theme/js/jquery.min.js"></script>
    @Scripts.Render("~/main-script")


    <!--<link rel="stylesheet" type="text/css" href="/theme/css/bootstrap.css">
    <link rel="stylesheet" type="text/css" href="/theme/css/style.css">-->
    <!--[if lt IE 9]>
    <script src="/theme/bootstrap/js/html5shiv.min.js"></script>
    <script src="/theme/bootstrap/js/respond.min.js"></script>
    <![endif]-->

    <script src="/theme/js/modernizr.custom.js" charset="windows-1254"></script>

    <meta property="fb:app_id" content="@ViewBag.AppId" />
    <meta property="og:type" content="@ViewBag.OgType" />
    <meta property="og:url" content="@ViewBag.Url" />
    <meta property="og:title" content="@ViewBag.Title" />
    <meta property="og:description" content="@ViewBag.Description" />
    <meta property="og:image" content="@ViewBag.Image" />

    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r;
            i[r] = i[r] ||
                function () {
                    (i[r].q = i[r].q || []).push(arguments)
                }, i[r].l = 1 * new Date();
            a = s.createElement(o),
                m = s.getElementsByTagName(o)[0];
            a.async = 1;
            a.src = g;
            m.parentNode.insertBefore(a, m)
        })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');
        ga('create', 'UA-99157574-1', 'auto');
        ga('send', 'pageview');
    </script>
</head>

<body class="ct-headroom--scrollUpBoth cssAnimate">
    <div id="PageSkinLeft"></div>
    <div id="PageSkinRight"></div>

    <div class="alert fade in alert-danger showMessageBox" style="display: none;">
        <div class="showMessage" style="display: inline-block;"></div>
    </div>

    <div class="alert fade in alert-success showSuccessMessageBox" style="display: none;">
        <div class="showSuccessMessage" style="display: inline-block;"></div>
    </div>
    <div id="loading">
        Yükleniyor...
        <img src="/assets/img/ajax-loading.gif" alt="yükleniyor..." />
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert fade in alert-danger showMessageBox" style="display: block;">
            <div class="showMessage" style="display: inline-block;">@TempData["Error"]</div>
        </div>
    }

    @if (TempData["Success"] != null)
    {
        <div class="alert fade in alert-success showMessageBox" style="display: block;">
            <div class="showMessage" style="display: inline-block;">@TempData["Success"]</div>
        </div>
    }

    <div class="ct-preloader">
        <div class="ct-preloader-content"></div>
    </div>

    <!--Mobile-->
    @{
        Html.RenderAction("GetMobileMenus", "Partial");
    }

    <div class="ct-shopMenuMobile">
        <!-- Currency Dropdown -->
        <nav class="ct-shopMenuMobile-navbar">
            <ul class="list-unstyled">
                <li><a href="/user/login"><i class="fa fa-user fa-fw"></i> Giriş</a></li>
                <li><a href="/user/create"><i class="fa fa-pencil fa-fw"></i> Hesap Oluştur</a></li>
                <li><a href="/user/my-account"><i class="fa fa-cog fa-fw"></i> Hesabım</a></li>
                <li><a href="/basket"><i class="fa fa-archive fa-fw"></i> Sepetim</a></li>
            </ul>
        </nav>
        <div class="ct-shopMenuMobile-basket">
            <a href="/basket"><i class="fa fa-shopping-cart fa-fw"></i> Sepetim <span id="mobileBasketQuantity" class="ct-topBar-basket-quantity">(2 ürün)</span></a>
            <div class="ct-shopMenuMobile-basketContainer">
                <ul id="mobileBasketMiniProductList" class="ct-shopMenuMobile-basketProducts list-unstyled"></ul>
                <div class="ct-shopMenuMobile-basketWrap ct-shopMenuMobile-subTotal ct-fw-600">
                    <div class="pull-left text-uppercase">Toplam</div>
                    <div class="pull-right" id="mobileBasketTotalAmount">0.00 TL</div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>

    <div id="ct-js-wrapper" class="ct-pageWrapper">
        <!-- navbar + logo menu -->
        <div class="ct-navbarMobile">
            <button type="button" class="navbar-toggle">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/"><img src="/theme/images/content/logo.png" alt="Payidar"> </a>
            <button type="button" class="navbarShop-toggle">
                <i class="fa fa-fw fa-user"></i>
            </button>
        </div>

        <!-- TOPBAR -->
        <div class="ct-topBar">
            <div class="container">
                <div class="ct-topBar-navigation pull-left">
                    @{
                        Html.RenderPartial("../Partial/TopLeftUserMenu");
                    }
                </div>
                <div class="pull-right">

                    @Html.Partial("../Partial/RightTopBasket")

                    <div class="btn-group">
                        <button type="button" class="btn btn-md">
                            TR
                        </button>
                    </div>
                    <div class="btn-group">
                        <button type="button" class="btn btn-md">
                            <i class="fa fa-try" aria-hidden="true"></i> (TL)
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="ct-headerWrapper ct-u-paddingBottom20">
            <!--header-->
            @Html.Partial("../Partial/Logo")
            <!--menu-->
            @{
                Html.RenderAction("GetMenus", "Partial");
            }
        </div>

        @RenderBody()

        <!-- FOOTER -->
        <footer class="ct-footer ct-u-paddingTop170">
            @Html.Partial("../Partial/Footer")
        </footer>
    </div>
</body>
</html>